<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShopWorld.MAUI.ViewModels"
             x:Class="ShopWorld.MAUI.Views.StartUpPage"
             x:DataType="viewModels:StartUpViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="StartUpPage">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
        <Image  Margin="4" WidthRequest="{OnIdiom Desktop=300,Tablet=200,Phone=120,Default=250}" HeightRequest="{OnIdiom Desktop=300,Tablet=200,Phone=120,Default=250}" Source="shop_world_logo.png">
            
        </Image>
        <Button Text="Login as User" Command="{Binding LoginAsUserCommand}" Margin="4"/>
        <Button Text="Login as Admin" Command="{Binding LoginAsAdminCommand}" Margin="4"/>
    </VerticalStackLayout>
</ContentPage>
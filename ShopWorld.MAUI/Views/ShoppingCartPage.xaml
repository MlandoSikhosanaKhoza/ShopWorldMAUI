<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShopWorld.MAUI.ViewModels"
             xmlns:model="clr-namespace:ShopWorld.MAUI.Models"
             x:DataType="viewModels:ShoppingCartViewModel"
             x:Class="ShopWorld.MAUI.Views.ShoppingCartPage"
             Title="Shopping Cart">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}"/>
    </Shell.BackButtonBehavior>
    <Grid ColumnDefinitions="*,*,*,*,*,*">
        <VerticalStackLayout Grid.Column="{OnIdiom Phone=0,Tablet=1,Desktop=1}" Grid.ColumnSpan="{OnIdiom Phone=6,Tablet=4,Desktop=4}">
            <Label Text="{Binding TotalBeforeTax,StringFormat='Total excl VAT R {0:N}'}"></Label>
            <Label Text="{Binding TotalAfterTax,StringFormat='Total incl VAT R {0:N}'}"></Label>
            <CollectionView ItemsSource="{Binding MyOrderItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:CartModel">
                        <Frame Margin="4">
                            <Grid ColumnDefinitions="*,*,*,Auto,Auto,Auto">
                                <Label VerticalOptions="Center" Grid.Column="0" Text="{Binding ItemName}"/>
                                <Label VerticalOptions="Center" Grid.Column="1" Text="{Binding Quantity}"/>
                                <Label VerticalOptions="Center" Grid.Column="2" Text="{Binding Price,StringFormat='R {0:N}'}"/>
                                <ImageButton Grid.Column="3" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ShoppingCartViewModel}},Path=IncreaseQuantityCommand}" CommandParameter="{Binding .}">
                                    <ImageButton.Source>
                                        <FontImageSource FontFamily="FontAwesome" Color="Black" Glyph="{x:Static model:IconFont.Plus}"/>
                                    </ImageButton.Source>
                                </ImageButton>
                                <ImageButton Grid.Column="4" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ShoppingCartViewModel}},Path=DecreaseQuantityCommand}" CommandParameter="{Binding .}">
                                    <ImageButton.Source>
                                        <FontImageSource FontFamily="FontAwesome" Color="Black" Glyph="{x:Static model:IconFont.Minus}"/>
                                    </ImageButton.Source>
                                </ImageButton>
                                <ImageButton Grid.Column="5" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ShoppingCartViewModel}},Path=RemoveCartItemCommand}" CommandParameter="{Binding .}">
                                    <ImageButton.Source>
                                        <FontImageSource FontFamily="FontAwesome" Color="Black" Glyph="{x:Static model:IconFont.TrashAlt}"/>
                                    </ImageButton.Source>
                                </ImageButton>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button IsVisible="{Binding IsDisplayingCheckoutButton}" IsEnabled="{Binding IsNotBusy}" Text="Checkout" Command="{Binding CheckoutCommand}" Margin="4" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
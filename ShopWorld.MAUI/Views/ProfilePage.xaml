<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShopWorld.MAUI.ViewModels"
             x:Class="ShopWorld.MAUI.Views.ProfilePage"
             x:DataType="viewModels:ProfileViewModel"
             Title="ProfilePage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding FullName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="8" />
        <Button Text="Logout" VerticalOptions="Center" 
            HorizontalOptions="Center" Command="{Binding LogoutCommand}"/>
    </VerticalStackLayout>
</ContentPage>